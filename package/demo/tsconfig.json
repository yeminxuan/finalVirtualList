{
    "compilerOptions": {
      "target": "ES2020",
      "useDefineForClassFields": true,
      "module": "ESNext",
      "lib": ["ES2020", "DOM", "DOM.Iterable"],
      "skipLibCheck": true,
      "types": ["vite/client"],
      "paths": {
        "@/*": ["./src/*"],
        "@assets/*": ["./src/assets/*"],
        "@common/*": ["./src/common/*"],
        "@components/*": ["./src/components/*"],
        "@store/*": ["./src/store/*"],
        "@views/*": ["./src/views/*"],
        "@style/*": ["./src/style/*"],
        "@api/*": ["./src/api/*"]
      },
  
      /* Bundler mode */
      "moduleResolution": "bundler",
      "allowImportingTsExtensions": true,
      "resolveJsonModule": true,
      "isolatedModules": true,
      "noEmit": true,
      "jsx": "preserve",
  
      /* Linting */
      "strict": true,
      "noUnusedLocals": true,
      "noUnusedParameters": true,
      "noFallthroughCasesInSwitch": true
    },
    "include": ["src/**/*.ts", "src/**/*.d.ts","src/types/*.d.ts", "src/**/*.tsx", "src/**/*.vue"],
    "references": [{ "path": "./tsconfig.node.json" }]
  }
  